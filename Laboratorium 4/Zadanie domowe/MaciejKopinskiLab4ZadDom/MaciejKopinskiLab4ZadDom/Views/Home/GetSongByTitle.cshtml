@{
}

@model MaciejKopinskiLab4ZadDom.Models.SongViewModel

@*View all song data*@
<div>
    @*View song title*@
    <h2>Tytuł: @Model.Title</h2>
    @*View song author*@
    <h4>
        Wykonawca: @Model.Vocalist
    </h4>
    @*View song tab*@
    <h4>Tabulatura:</h4>
    <img src="@Url.Content(Model.Tab)" alt="@Model.Title" />
    @*View song notes*@
    <h4>Nuty:</h4>
    <img src="@Url.Content(Model.Notes)" alt="@Model.Title" />
    @*View song lyrics*@
    <h4>Słowa:</h4>
    <img src="@Url.Content(Model.Lyrics)" alt="@Model.Title" />
    <hr />
</div>

@{
}

@model MaciejKopinskiLab4ZadDom.Models.SongViewModel

@using (Html.BeginForm("SongNotesForm", "Home", FormMethod.Post))
{
    @Html.AntiForgeryToken()

    @*enter song title*@
    <div class="form-group">
        @Html.LabelFor(model => model.Title, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.EditorFor(model => model.Title, new { htmlAttributes = new { @class = "form-control" } })
        </div>
    </div>
    @*enter song author*@
    <div class="form-group">
        @Html.LabelFor(model => model.Vocalist, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.EditorFor(model => model.Vocalist, new { htmlAttributes = new { @class = "form-control" } })
        </div>
    </div>
    @*enter song notes*@
    <div class="form-group">
        @Html.LabelFor(model => model.Notes, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.EditorFor(model => model.Notes, new { htmlAttributes = new { @class = "form-control" } })
        </div>
    </div>

    @*summary button*@
    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Wyślij" class="btn btn-success" />
        </div>
    </div>
}